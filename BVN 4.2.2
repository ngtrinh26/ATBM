def caesar_encrypt(plaintext, k):
    k = k % 26  
    ciphertext = ""
    for ch in plaintext:
        if ch.isalpha():  
            base = 'A' if ch.isupper() else 'a'
            # (vị trí + k) mod 26, sau đó chuyển lại về ký tự
            new_char = chr((ord(ch) - ord(base) + k) % 26 + ord(base))
            ciphertext += new_char
        else:
            ciphertext += ch  # Giữ nguyên ký tự không phải chữ
    return ciphertext

P = "NguyenThiTrinh."
